extends layout

block content
  h1 #{title}
  
  form(method='POST' action='')
    div.form-group
      label(for='name') 藏书类型:
      input#name.form-control(type='text', placeholder='历史、奇幻等。' name='name' value=(undefined===genre ? '' : genre.name))
    button.btn.btn-primary(type='submit') 提交

  if errors 
    ul
      for error in errors
        li!= error.msg